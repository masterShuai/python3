from selenium import webdriver

driver = webdriver.PhantomJS()
driver.get('http://ac.qq.com/ComicView/chapter/id/530132/cid/3')
html = driver.page_source
#print html
with open('1.html', 'w') as fp:
    fp.write(html.encode('gbk'))

